doctype html
html(lang="en", xmlns:fb="http://ogp.me/ns/fb#")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    
    //- Title
    title #{title} | Atlanta Computerman! Your Family's Friendly Neighborhood I.T. & Computer Support Guardian.
    
    //- Main Stylesheet
    link(href="/stylesheets/style.css", rel="stylesheet")
    
  body
    //- Facebook header
    #fb-root
    script (function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(d.getElementById(id))return;js=d.createElement(s);js.id=id;js.src="//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=296712177088798&version=v2.0";fjs.parentNode.insertBefore(js, fjs);}(document,'script','facebook-jssdk'));
    
    //- Page header
    header
        .container
            include _header

    //- The main area
    main
        //- The fanciness of the logo
        #computerman-div(data-spy="affix", data-offset-top="91")
            .container
                section
                    .col-sm-8
                        img#computerman(src="/images/computerman.png", width="569", height="129", alt="Computerman")
        
        //- Include the navigation
        include _nav
        
        //- Here's the content block!
        #content
            block content            
        
        //- Finally - the footer!
        footer
            .container
                include _footer
    
    //- Main javascript file
    script(src="/vendor/jquery/dist/jquery.min.js")
    script(src="/vendor/bootstrap/js//affix.js")    
    script(src="//ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js")
    script(src="/vendor/slabText/js/jquery.slabtext.min.js")
    script(src="/vendor/FlowType.JS/flowtype.js")
    script(src="/javascripts/main.js")
    //- script(data-main="/javascripts/main.js", src="/vendor/require/build/require.min.js")