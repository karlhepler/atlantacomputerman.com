<div class="product-box">
  <div class="title big-text"><span class="slabtext">Contact Us</span></div>
  <div class="content">                    
    <!-- START CONTACT FORM -->
    <form action="#" method="post" class="form-horizontal contact">            
      <fieldset>
        <div class="form-group">
          <div class="col-sm-6">
            <label class="sr-only" for="first">First Name</label>
            <input placeholder="First Name" class="form-control" id="first" name="first" size="30" type="text" required />
          </div>
          <div class="col-sm-6">
            <label class="sr-only" for="last">Last Name</label>
            <input placeholder="Last Name" class="form-control" id="last" name="last" size="30" type="text" required />
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <label class="sr-only" for="email">Email Address</label>
            <div class="inner-addon left-addon">                              
              <input placeholder="Email Address" class="form-control" id="email" name="email" required="true" size="30" type="email" required />
              <i class="glyphicon glyphicon-envelope"></i>
            </div>                            
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <label class="sr-only" for="user_email">Phone Number</label>
            <div class="inner-addon left-addon">                              
              <input placeholder="Phone Number" class="phone-input form-control" id="phone" name="phone" required="true" size="30" type="text" required />
              <i class="glyphicon glyphicon-earphone"></i>
            </div>                            
          </div>
        </div>
      </fieldset>

      <p>We will send you an email confirmation immediately & contact you within 24 hours.</p>
      
      <div class="contact-us-button-area button-area">
        <button class="learn-more">Contact Us <i class="glyphicon glyphicon-chevron-right"></i></button>
      </div>
      
    </form>
    <!-- END CONTACT FORM -->
  </div>
  <div class="contact pow">
    <img src="/images/pow.png" alt="">
    <div class="deal big-text">
      <span class="slabtext">Your computer</span>
      <span class="slabtext">will be</span>
      <span class="slabtext">up & running</span>
      <span class="slabtext">in no time!</span>
    </div>
  </div>
</div>