<div class="form-group">
  <div class="col-sm-6">
    <label class="sr-only" for="first">First Name</label>
    <input placeholder="First Name" class="form-control" id="first-1" name="first" size="30" type="text" required />
  </div>
  <div class="col-sm-6">
    <label class="sr-only" for="last">Last Name</label>
    <input placeholder="Last Name" class="form-control" id="last-1" name="last" size="30" type="text" required />
  </div>
</div>
<div class="form-group">
  <div class="col-sm-12">
    <label class="sr-only" for="email">Email Address</label>
    <div class="inner-addon left-addon">                              
      <input placeholder="Email Address" class="form-control" id="email-1" name="email" required="true" size="30" type="email" required />
      <i class="glyphicon glyphicon-envelope"></i>
    </div>                            
  </div>
</div>
<div class="form-group">
  <div class="col-sm-12">
    <label class="sr-only" for="user_email">Phone Number</label>
    <div class="inner-addon left-addon">                              
      <input placeholder="Phone Number" class="form-control" id="phone-1" name="phone" required="true" size="30" type="text" required />
      <i class="glyphicon glyphicon-earphone"></i>
    </div>                            
  </div>
</div>
<div class="button-area">
  <button class="btn cancel-btn btn-default">Cancel</button>
  <button type="submit" class="btn create-btn btn-primary">Create User</button>
</div>