        else
          li
            a(href="/services/students") Students

        if menuItem == 'services-seniors' 
          li.active
            a(href="/services/seniors") Seniors
        else
          li
            a(href="/services/seniors") Seniors
      
      //- NAVBAR RIGHT
      ul.nav.navbar-nav.navbar-right
        if menuItem == 'contact-us'
