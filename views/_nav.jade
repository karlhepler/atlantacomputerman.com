          li
            a(href="/") Home

        if menuItem == 'services'
          li.active
            a(href="/services") Services
        else
          li
            a(href="/services") Services

        p.navbar-text.hidden-sm.fa.fa-chevron-right

        if menuItem == 'services-families'
          li.active
