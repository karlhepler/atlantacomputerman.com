mixin product-box(title, price, link, features, deal)
	.title= title
	.content
		.left
			.features= features
		.right
			.price-terms
				.price= price
				.terms
					.slash /
					.terms
						.period month
						.unit computer
			a.button(href="#{link}") Learn More
				i.fa.fa-chevron-right
	.pow
		img(src="/images/pow.png")
		.deal= deal