<!-- Modal -->
<div class="modal fade" id="quick-contact-modal" tabindex="-1" role="dialog" aria-labelledby="quick-contact-modalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h1 class="modal-title" id="quick-contact-modalLabel">How may we help you?</h1>
      </div>
      <!-- START CONTACT FORM -->
      <form novalidate action="#" method="post" class="form-horizontal quick-contact">
        <div class="modal-body">        
            <fieldset>
              <div class="form-group">
                <div class="col-xs-12">
                  <label class="sr-only" for="comment">What's going on?</label>
                  <textarea placeholder="What's going on?" class="form-control required" name="comment" id="comment" cols="10" rows="3" required></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-6">
                  <label class="sr-only" for="name">Your Name</label>
                  <div class="inner-addon left-addon">
                    <input placeholder="Your Name" class="form-control" id="name" name="name" type="text" required>
                    <i class="fa fa-user"></i>
                  </div>
                </div>
                <div class="col-sm-6">
                  <label class="sr-only" for="email">Email Address</label>
                  <div class="inner-addon left-addon">                              
                    <input placeholder="Email Address" class="form-control" id="email" name="email" type="email" required>
                    <i class="fa fa-envelope"></i>
                  </div>
                </div>
              </div>
            </fieldset>        
          </div>
          <div class="modal-footer">
            <p>We will send you an email confirmation immediately & contact you within 24 hours.</p>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      <!-- END CONTACT FORM -->
    </div>
  </div>
</div>